import random
ball = random.randint(1, 10)
print("Добро пожаловать в 'Золотой Джекпот'!")
print("У вас есть 100 монет. Сыграйте в рулетку — может, станете богаты!")
coins = 100
has_card = False
while coins > 0:
    print(f"Ваши монеты: {coins}")
    print("\nЧто вы делаете?")
    choice = input("1. Сыграть в рулетку\n2. Заглянуть за стойку бара\n3. Уйти\n> ").strip()
    if choice == "1":
        bet = int(input("Сколько ставите? (минимум 10) > "))
        if bet < 10 or bet > coins:
            print("Ставка некорректна!")
            continue
        result = input("Выберите: чётное (ч) или нечётное (н)? > ").strip().lower()
        print(f"Выпало число: {ball}")
        if (ball % 2 == 0 and result == "ч") or (ball % 2 == 1 and result == "н"):
            print("Вы выиграли! Вы получаете удвоенную ставку!")
            coins += bet
        else:
            print("Вы проиграли ставку.")
            coins -= bet
    elif choice == "2":
        if not has_card:
            print("За баром вы находите потерянную КАРТУ ДОСТУПА!")
            print("Кажется, ею можно открыть служебную дверь...")
            has_card = True
        else:
            print("Там ничего нового.")
    elif choice == "3":
        if has_card:
            print("\nВы уходите... но вдруг вспоминаете про карту.")
            final = input("Использовать карту и проникнуть в офис? (да/нет) > ").strip().lower()
            if final == "да":
                print("\nВы в офисе! На столе — сейф с деньгами.")
                print("Вы забираете 500 монет и исчезаете в ночи...")
                print(" Концовка: 'Ушёл победителем!'")
                break
            else:
                print("\nВы ушли как обычный посетитель.")
                print(" Концовка: 'Обычный проигравший'")
                break
        else:
            print("\nВы ушли с пустыми руками.")
            print(" Концовка: 'Обычный проигравший'")
            break
    else:
        print("Такого выбора нет.")
if coins <= 0:
    print("\nУ вас кончились монеты...")
    print(" вышвыривает вас за дверь.")
    print(" Концовка: 'Разорённый'")
